//Ler a cotação do dólar e a quantidade de dólares. Converter para real e mostrar o resultado.

import javax.swing.JOptionPane;
public class Exercicios1 {

    public static void main(String[] args) {
        double dolares, real, convert;
        
        dolares = Double.parseDouble(JOptionPane.showInputDialog("Digite o valor em dolar:"));
        real = 5.13;
        convert = dolares / real;
        
        System.out.println("O valor em reais é R$" + convert);
        
    }
}
